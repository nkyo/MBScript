function restart_nginx(){
	nginx -t 2>&1
	if [[ $? == 0 ]]; then
		systemctl restart nginx.service
	else
		echo "Vui long kiem tra lai Nginx. Lenh: nginx -t"
	fi
}

function restart_php() {
systemctl restart php-fpm.service
}