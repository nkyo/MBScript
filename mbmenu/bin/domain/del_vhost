#!/bin/bash
#######################################################
# MBScript main menu
#######################################################
. /usr/local/mbmenu/bin/func
if [[ ! $1 ]]; then
   clear
fi
echo "      __  __       _   ____               _   _ ______ _______ "
echo "     |  \/  |     | | |  _ \             | \ | |  ____|__   __|"
echo "     | \  / | __ _| |_| |_) | __ _  ___  |  \| | |__     | |   "
echo "     | |\/| |/ _  | __|  _ < / _  |/ _ \ | .   |  __|    | |   "
echo "     | |  | | (_| | |_| |_) | (_| | (_) _| |\  | |____   | |   "
echo "     |_|  |_|\__,_|\__|____/ \__,_|\___(_|_| \_|______|  |_|   "
echo ""
echo "========================================================================="
echo "1. Quản lý tên miền > Xóa tên miền"
echo "-------------------------------------------------------------------------"
echo

domain=$1

if [ -z "$domain" ]; then
echo "----Danh sách tên miền----"

awk '{print NR  "> " $s}' $listdomain

echo "-------------------------"
read -p "Nhập tên miền cần xóa [5=Quay lại]: " domain
fi

if grep $listdomain -e $domain >/dev/null 2>&1
then
    echo -n "Bạn có chắc chắn muốn xóa $domain? (Y/n): "
	read ok

		if [ $ok = "Y" -o $ok = "y" ];
		then
		echo "Đang xóa tên miền $domain..."
		sleep 3

		rm -rf /home/admin/conf/$domain.conf
		mv /home/admin/domains/$domain /home/admin/3days.trash/
		sed -i '/'$domain'/d' $listdomain

		/etc/init.d/apache2 restart >/dev/null 2>&1

		echo "Đã xóa tên miền $domain"
		sleep 2
		/usr/local/mbmenu/mbdomain
		else [ $ok = "n" -o $ok = "N" ];
		echo "Quay lại menu"
		sleep 3
		/usr/local/mbmenu/mbdomain
		fi
else
	echo "Tên miền không tồn tại trên máy chủ, vui lòng nhập lại!!!"
	sleep 4
	clear
	/usr/local/mbmenu/bin/domain/del_vhost
fi