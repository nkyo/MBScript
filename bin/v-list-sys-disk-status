#!/bin/bash
# info: list disk information
# options: [FORMAT]
# labels: 
#
# example: v-list-sys-disk-status
#
# The function lists disk information


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument definition
#format=${1-shell}

# Includes
#source $HESTIA/func/main.sh


#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Displaying disk usage
df -h
echo -en "\n-------------------------------------"
echo -en  "-------------------------------------\n\n"

# Displaying I/O usage
iostat -m
echo -en "\n-------------------------------------"
echo -en  "-------------------------------------\n\n"

# Displaying disk information
fdisk -l

#----------------------------------------------------------#
#                       Hestia                             #
#----------------------------------------------------------#

exit
